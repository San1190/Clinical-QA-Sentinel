# ============================================================================
# Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Active Environment (dev, test, staging, demo)
ENVIRONMENT=demo

# Sensitive Test Credentials (if different from config.json)
# TEST_USERNAME=your.test.user@example.com
# TEST_PASSWORD=your_secure_password_here

# Browser Configuration Overrides
# HEADLESS_MODE=true
# BROWSER_NAME=chrome

# Optional: Custom Portal URL (overrides config.json)
# PORTAL_URL=https://your-custom-url.com/login

# Optional: Selenium Grid Configuration
# SELENIUM_HUB_URL=http://localhost:4444/wd/hub
# SELENIUM_REMOTE=false

# Optional: API Testing (future expansion)
# API_BASE_URL=https://api.hospital-demo.com
# API_KEY=your_api_key_here

# Optional: Database Connection (for data validation)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hospital_test_db
# DB_USER=test_user
# DB_PASSWORD=test_password

# Logging Level Override
# LOG_LEVEL=DEBUG

# Screenshot Settings
# SCREENSHOT_ON_PASS=false
# SCREENSHOT_ON_FAIL=true
